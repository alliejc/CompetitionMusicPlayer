<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_skip_previous_white_36dp"
            android:id="@+id/skip_previous"
            android:layout_weight="20"
            android:contentDescription="@string/skip_previous_song"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_play_arrow_white_36dp"
            android:id="@+id/play"
            android:layout_weight="20"
            android:contentDescription="@string/play_song"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_pause_white_36dp"
            android:id="@+id/pause"
            android:layout_weight="20"
            android:contentDescription="@string/pause_song"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_skip_next_white_36dp"
            android:id="@+id/skip_next"
            android:layout_weight="20"
            android:contentDescription="@string/skip_next_song"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@+id/one_minute_thirty"
            android:layout_margin="10dp"
            android:layout_weight="20">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_thirty_radio_button"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/one_minute_thirty"
                android:checked="true"
                android:gravity="center"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_minute_radio_button"
                android:onClick="onRadioButtonClicked"
                android:id="@+id/two_minutes"
                android:gravity="center"/>

        </RadioGroup>
    </LinearLayout>


    </android.support.v7.widget.Toolbar>

