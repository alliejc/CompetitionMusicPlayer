<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="media_controller"
            type="com.alisonjc.compmusicplayer.databinding.MediaControllerViewModel">
        </variable>
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_default"
    android:orientation="horizontal"
    android:layout_weight="100"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="50"
    android:textColor="@color/color_light_pink"
    android:textSize="18sp"
    android:layout_gravity="center_vertical|end"
    android:gravity="center_vertical|end"
    android:text="@{media_controller.songName}"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:textColor="@color/color_light_pink"
        android:textSize="18sp"
        android:layout_gravity="center_vertical|start"
        android:gravity="center_vertical|start"
        android:text="@{media_controller.artist}"/>
</LinearLayout>
</layout>
