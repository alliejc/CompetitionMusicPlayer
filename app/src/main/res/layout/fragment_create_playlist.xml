<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/playlist_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Playlist Title"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/add_songs_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Songs"
        android:layout_below="@id/playlist_edit_text"/>

    <include
        layout="@layout/list"
        android:id="@+id/create_framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_songs_title" />

</RelativeLayout>